{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Zephyr IDE: Debug Select",
      "cwd": "${workspaceFolder}",
      "gdbPath": "${command:zephyr-ide.get-gdb-path}",
      "executable": "${command:zephyr-ide.select-active-build-path}/zephyr/zephyr.elf",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "bmp",
      "interface": "swd",
      "device": "STM32F103",
      "BMPGDBSerialPort": "${config:bmp_serial_port}",
      "preLaunchCommands": ["monitor rtt enable"]
    }
  ]
}
